{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug WebdriverIO Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/@wdio/cli/bin/wdio.js",
            "args": [
                "${workspaceFolder}/wdio.conf.ts"
            ],
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "autoAttachChildProcesses": true
        }
    ]
}
